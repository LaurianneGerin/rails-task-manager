<h1>Task list</h1>


<% @tasks.each_with_index do |task, index| %>
  <hr>
  <p> NAME : <%= @tasks[index].name%></p>
  <%= link_to "Details", task_path(task) %> <%= link_to "Edit", edit_task_path(task)%> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <hr>
<% end %>

